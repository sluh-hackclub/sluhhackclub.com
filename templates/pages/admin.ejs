<!DOCTYPE html>
<html>
<head>
  <title>Admin | SLUH Hack Club</title>
  <% include ../partials/head.ejs %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  <!-- Bulma Version 0.7.1-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css" />
  <link rel="stylesheet" type="text/css" href="/admin.css">
</head>

<body>
  <div style="flex: 1 0 auto;">
    <section class="hero is-info is-medium is-bold">
      <div class="hero-head">
        <nav class="navbar" style="margin-bottom:0;">
          <div class="container">
            <div class="navbar-brand">
              <a class="navbar-item" href="../">
                <img src="/short.png" alt="Logo">
              </a>
              <span class="navbar-burger burger" data-target="navbarMenu">
                <span></span>
                <span></span>
                <span></span>
              </span>
            </div>
            <div id="navbarMenu" class="navbar-menu">
              <div class="navbar-end">
                <div class="tabs is-right">
                  <ul style="border-bottom-style: none;">
                    <li class="is-active"><a>Admin</a></li>
                    <li><a href="/admin/projects">Projects</a></li>
                    <li><a href="/admin/submissions">Submissions</a></li>
                  </ul>
                  <span class="navbar-item">
                    <a class="button is-white is-outlined" href="/logout">
                      <span class="icon">
                        <i class="fas fa-lock"></i>
                      </span>
                      <span title="Logout">Logout</span>
                    </a>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </section>
    <!-- END NAV -->
    <div class="container">
      <div style="margin-left:10px;margin-right:10px;margin-top:16px;">
        <section class="hero is-info welcome is-small">
          <div class="hero-body">
            <div class="container">
              <h1 class="title">
                Hello, <%= firstName %>.
              </h1>
              <h2 class="subtitle">
                "You're welcome." - Daniel Blittschau, 2018
              </h2>
            </div>
          </div>
        </section>
        <section class="info-tiles">
          <div class="tile is-ancestor has-text-centered">
            <div class="tile is-parent">
              <article class="tile is-child box">
                <p class="title"><%= studentCount %></p>
                <p class="subtitle">Members</p>
              </article>
            </div>
            <% if (currentProjectExists) { %>
              <div class="tile is-parent">
                <article class="tile is-child box">
                  <p class="title"><%= currentProjectTitle %></p>
                  <p class="subtitle">Current Project</p>
                </article>
              </div>
              <div class="tile is-parent">
                <article class="tile is-child box">
                  <p class="title"><%= currentProjectSubmissions %></p>
                  <p class="subtitle">Submissions</p>
                </article>
              </div>
            <% } else { %>
              <div class="tile is-parent">
                <article class="tile is-child box">
                  <p class="title"><b>No Current Project</b></p><a href="/admin/projects/create" class="button is-success" style="margin-top:-10px;">Create New</a>
                  <!-- <p class="subtitle">Current Project</p> -->
                </article>
              </div>
              <div class="tile is-parent">
                <article class="tile is-child box">
                  <p class="title">N/A</p>
                  <p class="subtitle">Submissions</p>
                </article>
              </div>
            <% } %>
          </div>
        </section>
      </div>
      <div class="columns" style="margin-left:0px; padding: 0px 10px 0px 10px;">
        <div class="column is-6">
          <div class="card events-card">
            <header class="card-header">
              <p class="card-header-title">
                Unreviewed Submissions
              </p>
              <!-- <a href="#" class="card-header-icon" aria-label="more options">
                <span class="icon">
                  <i class="fa fa-angle-down" aria-hidden="true"></i>
                </span>
              </a> -->
            </header>
            <div class="card-table">
              <div class="content">
                <table class="table is-fullwidth is-striped">
                  <tbody>
                    <% newSubmissions.forEach(submission => { %>
                    <tr>
                      <td width="0%" style="padding:0 0 0 10px;"><!--<i class="far fa-bullet"></i>--></td>
                      <td><%= submission.title %></td>
                      <td class="level-right"><a class="button is-small is-warning" href="/admin/submissions/<%= submission._id.toString() %>">Review</a></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
          <footer class="card-footer">
            <div class="container has-text-centered" style="padding: 7px 0;">
              <a href="/admin/submissions" class="button is-link">View All Submissions</a>
            </div>
          </footer>
        </div>
      </div>
      <div class="column is-6">
        <!-- <div class="card">
          <header class="card-header">
            <p class="card-header-title">
              Inventory Search
            </p>
            <a href="#" class="card-header-icon" aria-label="more options">
              <span class="icon">
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </span>
            </a>
          </header>
          <div class="card-content">
            <div class="content">
              <div class="control has-icons-left has-icons-right">
                <input class="input is-large" type="text" placeholder="">
                <span class="icon is-medium is-left">
                  <i class="fa fa-search"></i>
                </span>
                <span class="icon is-medium is-right">
                  <i class="fa fa-check"></i>
                </span>
              </div>
            </div>
          </div>
        </div> -->
        <div class="card">
          <header class="card-header">
            <p class="card-header-title">
              User Search
            </p>
            <!-- <a href="#" class="card-header-icon" aria-label="more options">
              <span class="icon">
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </span>
            </a> -->
          </header>
            <div class="card-content">
              <!-- <div class="content"> -->
              <form action="javascript:void(0);" id="user-search-form">
                <div class="field">
                  <div class="control has-icons-left has-icons-right">
                    <input class="input is-large" type="text" placeholder="Name" name="user-search">
                    <span class="icon is-medium is-left">
                      <i class="fa fa-search"></i>
                    </span>
                    <span class="icon is-medium is-right" style="cursor: pointer;">
                      <i class="fa fa-check"></i>
                    </span>
                    <!-- <button class="icon is-medium is-right">
                      <i class="fa fa-check"></i>
                    </button> -->
                </div>
                </div>
                <div class="field">
                  <div class="control">
                    <button class="button is-link">Search</button>
                    <a href="/admin/users" class="button is-link">View all users</a>
                  </div>
                </div>
              <!-- </div> -->
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ../partials/footer.ejs %>
  <script type="text/javascript">
<% include ../scripts/burger.ejs %>

  let userSearchForm = document.getElementById('user-search-form');
  console.dir(userSearchForm);
  console.log(userSearchForm[0].value);
  userSearchForm.onsubmit = function() {
    // console.log(userSearchForm[0].value);
    if (userSearchForm[0].value.trim() !== '')
    window.location = '/admin/users/search/' + userSearchForm[0].value.trim();
    // console.log('/admin/users/search/' + userSearchForm[0].value);
  };

  </script>
</body>

</html>
