              <div style="margin-left:10px;margin-right:10px;">
                <section class="hero is-info welcome is-small">
                    <div class="hero-body">
                        <div class="container">
                            <h1 class="title">
                                Hello, <%= firstName %>.
                            </h1>
                            <h2 class="subtitle">
                                "You're welcome." - Daniel Blittschau, 2018
                            </h2>
                        </div>
                    </div>
                </section>
                <section class="info-tiles">
                    <div class="tile is-ancestor has-text-centered">
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title"><%= studentCount %></p>
                                <p class="subtitle">Members</p>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">(...)</p>
                                <p class="subtitle">Projects</p>
                            </article>
                        </div>
                        <div class="tile is-parent">
                            <article class="tile is-child box">
                                <p class="title">(...)</p>
                                <p class="subtitle">Submissions</p>
                            </article>
                        </div>
                    </div>
                </section>
              </div>
                <div class="columns" style="margin-left:0px;">
                    <div class="column is-6">
                        <div class="card events-card">
                            <header class="card-header">
                                <p class="card-header-title">
                                    Unreviewed Submissions
                                </p>
                                <a href="#" class="card-header-icon" aria-label="more options">
                  <span class="icon">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
                            </header>
                            <div class="card-table">
                                <div class="content">
                                    <table class="table is-fullwidth is-striped">
                                        <tbody>
                                          <% newSubmissions.forEach(submission => { %>
                                            <tr>
                                                <td width="5%"><i class="far fa-bell"></i></td>
                                                <td><%= submission.title %></td>
                                                <td><a class="button is-small is-primary" href="/admin/submissions/<%= submission._id.toString() %>">Action</a></td>
                                            </tr>
                                          <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <footer class="card-footer">
                                <a href="/admin/submissions" class="card-footer-item">View All</a>
                            </footer>
                        </div>
                    </div>
                    <div class="column is-6">
                        <div class="card">
                            <header class="card-header">
                                <p class="card-header-title">
                                    Inventory Search
                                </p>
